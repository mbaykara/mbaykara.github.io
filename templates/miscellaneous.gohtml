{{ define "content" }}
    <ul class="post-list">
        {{ range .Posts }}
            <li>
                <a href="/post/{{ .Slug }}">
                    <div class="post-title">{{ .Title }}</div>
                    <div class="post-date">{{ .Date.Format "January 2, 2006" }}</div>
                </a>
            </li>
        {{ else }}
            <p>No posts available</p>
        {{ end }}
    </ul>
{{ end }}
